<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:background="@drawable/roundedbackground"
        android:gravity="left"
        android:orientation="vertical">

        <TextView
            android:textColor="@color/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:text="SIGN UP"
            android:fontFamily="sans-serif-black"
            android:textSize="25dp"
            android:textStyle="bold" />
        <TextView
            android:fontFamily="sans-serif-black"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Please sign up to continue"
            android:textSize="15dp"
            android:textStyle="italic" />

        <TextView
            android:fontFamily="sans-serif-black"
            android:textColor="@color/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EMAIL"
            android:layout_marginLeft="30dp"
            android:textStyle="bold" />

        <EditText
            android:fontFamily="sans-serif-black"
            android:drawableRight="@drawable/email"
            android:id="@+id/email"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:hint="safiKishan@gmail.com"
            android:layout_marginLeft="30dp" />

        <TextView
            android:fontFamily="sans-serif-black"
            android:textColor="@color/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="PASSWORD"
            android:textStyle="bold" />

        <EditText
            android:fontFamily="sans-serif-black"
            android:drawableRight="@drawable/ic_vpn_key_black_24dp"
            android:id="@+id/password"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:hint="TYPE PASSWORD"
            android:textStyle="normal"
            android:inputType="textPassword"
            android:layout_marginLeft="30dp"
            />

        <TextView
            android:fontFamily="sans-serif-black"
            android:textColor="@color/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="CONFIRM PASSWORD"
            android:textStyle="bold" />

        <EditText
            android:fontFamily="sans-serif-black"
            android:inputType="textPassword"
            android:drawableRight="@drawable/ic_vpn_key_black_24dp"
            android:id="@+id/retype_password"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:hint="RETYPE PASSWORD"
            android:layout_marginLeft="30dp" />
        <Button
            android:fontFamily="sans-serif-black"
            android:layout_marginTop="85dp"
            android:background="@drawable/roundbtn"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="SIGNUP"
            android:textSize="15dp"
            android:textColor="@color/signup"
            android:id="@+id/signupBtn"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">
        <TextView
            android:fontFamily="sans-serif-black"
            android:textColor="#737070"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Already have an account?"
            />
        <TextView
            android:fontFamily="sans-serif-black"
            android:textColor="@color/name"
            android:id="@+id/sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Come on"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>